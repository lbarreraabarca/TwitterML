{

    "databaseConfig": {
        "mongoDbUrl": "env:OPENSHIFT_MONGODB_DB_URL",
        "dbName": "env:OPENSHIFT_APP_NAME"
    },

    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },

    "specialization": {
    },

    "middleware": {
        
        "appsec": {
            "enabled": false,
            "priority": 110,
            "module": {
                "name": "lusca",
                "arguments": [
                    {
                        "csrf": false,
                        "p3p": false,
                        "xframe": "SAME-ORIGIN",
                        "csp": false
                    }
                ]
            }
        },

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        }

    }
}
